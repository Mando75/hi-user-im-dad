{
  "name": "remix-template-express",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o ./app/styles/app.css",
    "dev": "remix build && run-p dev:*",
    "dev:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
    "dev:remix": "remix watch",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o ./app/styles/app.css",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "prepare": "husky install",
    "db:prepare": "pnpm run db:push && pnpm run db:generate && pnpm run db:seed",
    "db:generate": "pnpx prisma generate",
    "db:push": "pnpx prisma db push",
    "db:seed": "node prisma/seed"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@prisma/client": "^3.14.0",
    "@remix-run/express": "^1.5.1",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "classnames": "^2.3.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@types/classnames": "^2.3.1",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "prisma": "^3.14.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
